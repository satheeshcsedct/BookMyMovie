.d-flex.flex-column.flex-md-row.align-items-center.p-3.px-md-4.mb-3.bg-white.border-bottom.shadow-sm
  = image_tag("/bookmymovie.png", size: "300x40", class: 'ml-5')
  %h4.my-0.mr-md-auto.font-weight-normal.font-italic
  %nav.my-2.my-md-0.mr-md-3
    = link_to 'Home', movies_path, class: 'p-3 text-dark'
    - if current_user.nil?
      = link_to 'Login', login_path, class: 'p-5 text-dark'
      = link_to 'Register', signup_path, class: 'btn btn-outline-primary'
    - else
      = link_to 'Bookings', bookings_path, class: 'p-5 text-dark'
      = link_to 'Logout', logout_path, class: 'underlineHover'
    - if current_user
      %span.p-4
        %img.rounded-circle{:alt => "20x20", "data-holder-rendered" => "true", :src => "//lh3.googleusercontent.com/-6V8xOA6M7BA/AAAAAAAAAAI/AAAAAAAAAAA/rzlHcD0KYwo/photo.jpg?sz=30"}
        %span.p-1.header-username.font-italic= current_user&.name&.capitalize